<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{session.username}}!</h2>
  </div>
</div>

<div class="">
  <div class="col-md-6">
    <h3>Submit a new Blog Post:</h3>

    <form class="form new-blog-form">

        <div class="form-group">
            <label for="blog-name">blog name:</label>
            <input class="form-input" type="text" id="blog-name" name="blog-name" />
        </div>

        <div class="form-group">
            <label for="blog-desc">title:</label>
            <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
        </div>

        <div class="form-group">
            <label for="blog-content">content:</label>
            <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" id="form-submit" class="btn btn-primary">Post</button>
        </div>

    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Your Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
